{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "outDir": "./dist/",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "es5",
    "paths": { 
      "config": ["./config.js"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*", "express/**/*"]
}
